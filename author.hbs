{{!< default}}

<main id="archives" class="main">

    <!-- start: .content-wrapper -->
    <div class="content-wrapper">
    
        {{#author}}
            <div class="grid-container grid-medium">
                <!-- start: .author -->
                <section id="author" class="author epcl-flex {{#if profile_image}} with-avatar{{else}} no-avatar{{/if}}">

                    <div class="left">
                        <h4 class="title bordered author-name large">
                            {{name}}                            
                        </h4>
                        <div class="info">
                            <p>{{bio}}</p>      
                        </div> 
                        <div class="social">                        
                            {{#if twitter}}
                                <a href="{{twitter_url}}" class="twitter tooltip" data-title="{{t 'Follow on {network}' network="Twitter" }}" target="_blank">
                                    <svg class="icon"><use xlink:href="{{asset 'images/svg-icons.svg#twitter-icon'}}"></use></svg>
                                    {{t "Twitter"}}
                                </a>
                            {{/if}}
                            {{#if facebook}}
                                <a href="{{facebook_url}}" class="facebook tooltip" data-title="{{t 'Follow on {network}' network="Facebook" }}" target="_blank">
                                    <svg class="icon"><use xlink:href="{{asset 'images/svg-icons.svg#facebook-icon'}}"></use></svg>
                                    {{t "Facebook"}}
                                </a>
                            {{/if}}
                            {{#if website}}
                                <a href="{{website}}" class="website tooltip" data-title="{{t 'Website' }}: {{website}}" target="_blank">
                                    <svg class="icon main-color"><use xlink:href="{{asset 'images/svg-icons.svg#website-icon'}}"></use></svg>
                                    {{t "Website"}}
                                </a>
                            {{/if}}
                        </div> 
                    </div>

                    {{#if profile_image}}
                        <div class="right">
                            <span class="author-avatar">
                                <img class="author-image cover" fetchpriority="high" decoding="async" src="{{profile_image}}">
                            </span>  
                        </div>
                    {{/if}}

                </section>
                <!-- end: .author -->
            </div>
        {{/author}}
        
        <div class="clear"></div>
    
    </div>
    <!-- end: .content-wrapper -->

    <div class="grid-container content">
        <!-- start: .content-wrapper -->
        <div class="content-wrapper" id="post-list">      
            {{> home-blocks/grid-posts}}                  
            <div class="clear"></div>          
        </div>
        <!-- end: .content-wrapper -->
    </div>

</main>