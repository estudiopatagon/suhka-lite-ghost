{{!< default}}

{{#post}}

<!-- start: #page -->
<main id="page" class="main grid-container">
	
    <!-- start: .center -->
    <div id="single" class="content no-sidebar {{#match @page.show_title_and_feature_image}}{{#if feature_image}}fullcover{{/if}}{{/match}}">

        {{#match @page.show_title_and_feature_image}}
            {{#if feature_image}}
                <div class="fullcover-wrapper">
                    <div class="post-format-image">
                        
                        <div class="featured-image">
                            <div class="epcl-loader">
                                <img width="1500" height="600" src="{{img_url feature_image size="fullcover"}}" class="fullwidth" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
                            </div>                       
                        </div>
                    </div>
                </div>
            {{/if}}
        {{/match}}

        <div class="content">
        
            <!-- start: .left-content -->
            <div class="left-content np-mobile">
                <article class="main-article {{post_class}}">

                    <header>
                        <div class="info textcenter">    
                            <h1 class="main-title title ularge">{{title}}</h1>   
                        </div>            
                        <div class="clear"></div>
                    </header>
                
                    <section class="post-content">              
                        <div class="text">
                            {{content}}
                        </div>
                        <div class="clear"></div>
                    </section>
                    
                </article>
            </div>
            <!-- end: .content -->
            
            <div class="clear"></div>

        </div>
    
    </div>
    <!-- end: .center -->
    
</main>
<!-- end: #page -->

{{/post}}
